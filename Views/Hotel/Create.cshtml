@model WanderVibe.Models.Hotel

@{
    ViewBag.Title = "Create Hotel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <h1>Create New Hotel</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
            <li class="breadcrumb-item">Hotel</li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Create</h5>

        <form asp-action="create" method="post" class="row g-3 needs-validation" novalidate>
            <div class="col-md-12">
                <div class="form-floating mb-3">
                    <input asp-for="HotelName" class="form-control" id="floatingHotelName" placeholder="Hotel Name" spellcheck="true" required>
                    <label for="floatingHotelName">Hotel Name</label>
                    <div class="invalid-feedback">Please provide a hotel name.</div>
                    <span asp-validation-for="HotelName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-floating mb-3">
                    <input asp-for="Location" class="form-control" id="floatingLocation" placeholder="Location" spellcheck="true" required>
                    <label for="floatingLocation">Location</label>
                    <div class="invalid-feedback">Please provide a location.</div>
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input asp-for="PricePerNight" class="form-control" id="floatingPricePerNight" type="number" step="0.01" placeholder="Price Per Night" spellcheck="true" required>
                    <label for="floatingPricePerNight">Price Per Night</label>
                    <div class="invalid-feedback">Please provide a price per night.</div>
                    <span asp-validation-for="PricePerNight" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input asp-for="Availability" class="form-control" id="floatingAvailability" type="number" placeholder="Availability" spellcheck="true" required>
                    <label for="floatingAvailability">Availability</label>
                    <div class="invalid-feedback">Please provide the availability.</div>
                    <span asp-validation-for="Availability" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input asp-for="Contact" class="form-control" id="floatingContact" placeholder="Contact" spellcheck="true" required>
                    <label for="floatingContact">Contact</label>
                    <div class="invalid-feedback">Please provide a contact number.</div>
                    <span asp-validation-for="Contact" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" id="floatingEmail" placeholder="Email" spellcheck="true" required>
                    <label for="floatingEmail">Email</label>
                    <div class="invalid-feedback">Please provide an email address.</div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form><!-- End floating Labels Form -->

    </div>
</div>

@section Scripts {
    <script>
        (function () {
            'use strict';

            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
