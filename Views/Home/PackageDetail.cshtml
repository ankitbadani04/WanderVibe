@model WanderVibe.Models.TravelPackage

@{
    ViewData["Title"] = "Package Detail";
}

<div class="container my-5">
    <h2 class="text-center mb-4">@Model.PackageName</h2>
    <div class="row">
        <div class="col-md-6">
            <img src="~/assets/img/@Model.ImageUrl" class="img-fluid" alt="Package Image">
        </div>
        <div class="col-md-6">
            <h4 class="mb-3">Details</h4>
            <p><strong>Price:</strong> $@Model.Price</p>
            <p><strong>From:</strong> @Model.DestinationFrom</p>
            <p><strong>To:</strong> @Model.DestinationTo</p>
            <p><strong>Start Date:</strong> @Model.StartDate.ToString("d")</p>
            <p><strong>End Date:</strong> @Model.EndDate.ToString("d")</p>
            <p>@Model.Description</p>
            <p><strong>Disclaimer:</strong> For this trip package, we have only @Model.Availability seats available.</p>
            @if (User.Identity.IsAuthenticated)
            {
                <a href="@Url.Action("BookNow", "Booking", new { id = Model.PackageId })" class="btn btn-success">Book Now</a>
            }
            else
            {
                <p class="text-danger">For booking, please login first.</p>
            }
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <a asp-action="Packages" class="btn btn-primary">Back to Packages</a>
        </div>
    </div>
</div>

