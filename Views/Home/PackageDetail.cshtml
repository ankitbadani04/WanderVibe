@model WanderVibe.Models.TravelPackage

@{
    ViewData["Title"] = "Package Detail";
}
<link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">

<div class="package-detail-header">
    <div class="overlay"></div>
    <img src="~/Server/Upload/@Model.ImageUrl" class="header-image" alt="Package Image">
    <div class="header-content">
        <h1>@Model.PackageName</h1>
        
        <div class="d-flex flex-row gap-5 justify-content-center mt-5">
        <div class="header-icons">
            <div class="icon">
                <i class="bi bi-geo-alt"></i>
                <span>Destination</span>
                <strong>@Model.DestinationFrom, @Model.DestinationTo</strong>
            </div>
        </div>
        <div class="header-icons">
            <div class="icon">
                <i class="bi bi-clock"></i>
                <span>Durations</span>
                <strong>1 Week</strong>
            </div>           
        </div>
        </div>
    </div>
</div>

<div class="container-details">
    <div class="row">
        <div class="col-md-8">
            <h4>Enjoy the Adventure</h4>
            <p>@Model.Description</p>
            <p><strong>Disclaimer:</strong> For this trip package, we have only @Model.Availability seats available.</p>           
        </div>
        <div class="col-md-4">
            <div class="card booking-card">
                <div class="card-body">
                    <h5 class="card-title">Price</h5>
                    <h3><strong>$@Model.Price</strong></h3>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Start Date:</strong> @Model.StartDate.ToString("d")</li>
                        <li class="list-group-item"><strong>End Date:</strong> @Model.EndDate.ToString("d")</li>
                        <li class="list-group-item"><strong>From:</strong> @Model.DestinationFrom</li>
                        <li class="list-group-item"><strong>To:</strong> @Model.DestinationTo</li>
                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="mt-3">
                        <a href="@Url.Action("BookNow", "Booking", new { id = Model.PackageId })" class="btn btn-primary btn-sm">Book Now</a>
                        <a asp-action="Packages" class="btn btn-secondary btn-sm">Back</a>
                        </div>
                    }
                    else
                    {
                        <p class="text-danger mt-3">For booking, please login first.</p>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            
        </div>
    </div>
</div>
