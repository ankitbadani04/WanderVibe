@model WanderVibe.Models.Service

@{
    ViewBag.Title = "Edit Service";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <h1>Edit Service</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
            <li class="breadcrumb-item">Service</li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Edit Service</h5>

        <form asp-action="Edit" method="post" class="row g-3 needs-validation" novalidate>
            <input type="hidden" asp-for="ServiceId" />
            <div class="col-md-12">
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" id="floatingName" placeholder="Service Name" spellcheck="true" required>
                    <label for="floatingName">Service Name</label>
                    <div class="invalid-feedback">Please provide a service name.</div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-floating mb-3">
                    <input asp-for="Destination" class="form-control" id="floatingDestination" placeholder="Destination" spellcheck="true" required>
                    <label for="floatingDestination">Destination</label>
                    <div class="invalid-feedback">Please provide a destination.</div>
                    <span asp-validation-for="Destination" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-floating mb-3">
                    <input asp-for="Price" class="form-control" id="floatingPrice" type="number" step="0.01" placeholder="Price" spellcheck="true" required>
                    <label for="floatingPrice">Price</label>
                    <div class="invalid-feedback">Please provide a price.</div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form><!-- End floating Labels Form -->
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            'use strict';

            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
