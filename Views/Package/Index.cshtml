@model IEnumerable<WanderVibe.Models.TravelPackage>

@{
    ViewBag.Title = "View Package";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <h1>View Package</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
            <li class="breadcrumb-item">Package</li>
            <li class="breadcrumb-item active">View</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Packages</h5>

                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>Package Name</th>                                
                                <th>From</th>
                                <th>To</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Price</th>
                                <th>Availability</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var package in Model)
                            {
                                <tr>
                                    <td>@package.PackageName</td>                                    
                                    <td>@package.DestinationFrom</td>
                                    <td>@package.DestinationTo</td>
                                    <td>@package.StartDate.ToString("yyyy/MM/dd")</td>
                                    <td>@package.EndDate.ToString("yyyy/MM/dd")</td>
                                    <td>$@package.Price</td>
                                    <td>@package.Availability</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                </div>
            </div>

        </div>
    </div>
</section>
